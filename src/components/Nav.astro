---
import Button from "./Button.astro";
---

<div class="nav">
    <input type="checkbox" id="sideToggle1" class="nav__toggle" hidden />
    <aside class="nav__menu">
        <label class="nav__close-btn" for="sideToggle1">&times;</label>
        <ul>
            <li><a href="/">Главная</a></li>
            <li><a href="/">Продукты</a></li>
            <li><a href="/">Кейсы</a></li>
            <li><a href="/">Экспертное мнение</a></li>
            <li><a href="/">Контакты</a></li>
        </ul>
        <Button href="#modal" class="button--320" size="normal" modal
            >Запросить презентацию</Button
        >
    </aside>
    <label class="menuBtn floatr" for="sideToggle1">&minus;</label>
</div>

<style is:global lang="scss">
    $sideNavWidth: 250px;
    $menuBG: #222;
    $transition: 0.33s cubic-bezier(0.7, 0.15, 0.36, 1);

    .nav {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: auto;
        padding: 20px 0;
        z-index: 1000;
        display: flex;
        justify-content: flex-end;
        align-items: center;

        &__menu {
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            z-index: 0;
            width: $sideNavWidth;
            background: $menuBG;
            color: #fff;
            padding: 20px;
            transform: translateX(-100%);
            transition: transform $transition;
            overflow-y: auto;
            display: flex;
            flex-direction: column;

            > ul {
                padding: 0;
                list-style: none;
                margin: 20px 0;

                > li {
                    border-top: 1px solid rgba(255, 255, 255, 0.1);
                    position: relative;
                    overflow: hidden;

                    a {
                        color: #fff;
                        text-decoration: none;
                        display: block;
                        line-height: 3.2;
                        font-size: 0.8em;
                        font-weight: bold;
                        margin: 0 -10px;
                        padding: 0 20px;
                        overflow: hidden;
                        white-space: nowrap;
                        transition: 0.4s cubic-bezier(0.3, 0.8, 0.5, 1.08);

                        &:hover {
                            color: $menuBG;
                            text-indent: $sideNavWidth;
                        }
                        &::before {
                            content: attr(data-value);
                            color: #fff;
                            float: left;
                            width: $sideNavWidth;
                            margin-left: -$sideNavWidth;
                        }
                    }
                }
            }
        }

        &__close-btn {
            position: absolute;
            top: 10px;
            right: 10px;
            color: #fff;
            cursor: pointer;
            font-size: 24px;
            background: none;
            border: none;
            padding: 0;
            width: 30px;
            height: 30px;
            text-align: center;
            line-height: 30px;
            border-radius: 50%;
            &:hover {
                background-color: rgba(255, 255, 255, 0.1);
            }
        }
    }

    .menuBtn {
        // margin-top: 20px;
        // margin-right: 20px;
        display: inline-block;
        border-radius: 50px;
        color: #fff;
        cursor: pointer;
        display: block;
        font: bold 36px Courier New;
        width: 50px;
        height: 50px;
        text-align: center;
        text-shadow:
            0 -5px,
            0 5px;
        transition: 0.15s;
        &:hover {
            background: #222;
        }
    }

    #sideToggle1:checked ~ .nav__menu {
        transform: translateX(0);
    }
    #sideToggle1:checked ~ .menuBtn {
        display: none;
    }
    .nav__toggle {
        opacity: 0;
        position: absolute;
    }
</style>
